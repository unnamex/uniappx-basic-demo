/**
 * MPM 工艺预览系统 - 通用类型定义
 * @description 定义通用的数据类型
 */

/**
 * 通用 API 响应类型
 */
export type ApiResponse<T> = {
	code: number
	message: string
	data: T | null
}

/**
 * 分页参数类型
 */
export type PageParams = {
	page: number
	pageSize: number
	keyword: string
}

/**
 * 分页结果类型
 */
export type PageResult<T> = {
	list: T[]
	total: number
	page: number
	pageSize: number
}

/**
 * 文件信息类型
 */
export type FileInfo = {
	name: string
	path: string
	size: number
	extension: string
}
